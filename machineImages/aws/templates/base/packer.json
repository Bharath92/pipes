{
  "variables": {
    "AWS_ACCESS_KEY": "",
    "AWS_SECRET_KEY": "",
    "REGION": "",
    "VPC_ID": "",
    "SUBNET_ID": "",
    "SOURCE_AMI": "",
    "SECURITY_GROUP_ID": "",
    "SYSTEM_RUNTIME_LANGUAGE_VERSION": "",
    "RUNTIME_VERSION": "",
    "DOCKER_IMAGE_REGISTRY_URL": "",
    "GITHUB_USERNAME": "",
    "GITHUB_API_KEY": "",
    "RT_URL": "",
    "RT_USER": "",
    "RT_API_KEY": "",
    "DOCKER_VERSION": "",
    "SSH_USERNAME": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `AWS_ACCESS_KEY`}}",
      "secret_key": "{{user `AWS_SECRET_KEY`}}",
      "region": "{{user `REGION`}}",
      "vpc_id": "{{user `VPC_ID`}}",
      "subnet_id": "{{user `SUBNET_ID`}}",
      "associate_public_ip_address": true,
      "security_group_id": "{{user `SECURITY_GROUP_ID`}}",
      "source_ami": "{{user `SOURCE_AMI`}}",
      "instance_type": "c4.2xlarge",
      "ssh_username": "{{user `SSH_USERNAME`}}",
      "ami_name": "{{user `ARCHITECTURE`}}-{{user `OS`}}-base-ami-{{user `RUNTIME_VERSION`}}-{{isotime \"2006-01-02-1504\"}}",
      "ami_groups": "all",
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_type": "io1",
          "volume_size": "120",
          "iops": "6000",
          "delete_on_termination": true
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sleep 30",
        "uname -a",
        "uptime"
      ]
    },
    {
      "type": "shell",
      "script": "init.sh",
      "environment_vars": [
        "GITHUB_USERNAME={{user `GITHUB_USERNAME`}}",
        "GITHUB_API_KEY={{user `GITHUB_API_KEY`}}",
        "RUNTIME_VERSION={{user `RUNTIME_VERSION`}}",
        "DOCKER_VERSION={{user `DOCKER_VERSION`}}"
      ],
      "execute_command": "echo 'packer' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "destination": "/tmp/images.txt",
      "source": "images.txt",
      "type": "file"
    },
    {
      "type": "shell",
      "script": "pullImages.sh",
      "environment_vars": [
        "DOCKER_IMAGE_REGISTRY_URL={{user `DOCKER_IMAGE_REGISTRY_URL`}}",
        "RT_URL={{user `RT_URL`}}",
        "RT_USER={{user `RT_USER`}}",
        "RT_API_KEY={{user `RT_API_KEY`}}",
        "SYSTEM_RUNTIME_LANGUAGE_VERSION={{user `SYSTEM_RUNTIME_LANGUAGE_VERSION`}}"
      ],
      "execute_command": "echo 'packer' | sudo -S sh -c '{{ .Vars }} {{ .Path }}'"
    }
  ]
}
